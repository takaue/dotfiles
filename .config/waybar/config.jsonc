// -*- mode: jsonc -*-
{
    // "layer": "top", // Waybar at top layer
    "layer": "overlay", // Waybar at top layer
    "position": "right", // Waybar position (top|bottom|left|right)
    "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        "clock",
        "custom/media",
        "cpu",
        "temperature",
        "memory",
        "network",
        "idle_inhibitor",
        "cffi/niri-workspaces-enhanced",
    ],
    "modules-center": [
    ],
    "modules-right": [
	"custom/rotate180",
	"custom/rotate90",
        "pulseaudio",
        "power-profiles-daemon",
        "backlight",
//        "keyboard-state",
        "battery",
        "tray",
        "custom/power"
    ],
    "custom/rotate90":{
	    "format": "Ôãπ",
	    "on-click": "/home/bou/app/bin/screenrotate90.sh",
    },
    "custom/rotate180":{
	    "format": "Û±¶ô",
